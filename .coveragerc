[run]
source = .
omit = 
    */tests/*
    */__pycache__/*
    */venv/*
    */.git/*
    */misc/*
    */examples/*
    */demos/*

[report]
show_missing = true
skip_covered = true
# Fail if total coverage drops below 75%
fail_under = 75
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    raise ImportError
    @abstractmethod
    @property
    @classmethod
    @staticmethod
    @.*\.setter
