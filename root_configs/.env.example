# Echoes Assistant V2 Environment Configuration
# Copy this file to .env and fill in your actual values

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_KEY_ECHOES=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4000

# LLM model tiering
LLM_MODEL_PRIMARY=gpt-4o-mini
LLM_MODEL_FALLBACK=gpt-4o
LLM_COST_AWARE=true

# Web Search Configuration
# Option 1: Use OpenAI's built-in search (requires GPT-4o-search-preview)
ENABLE_OPENAI_SEARCH=true
SEARCH_MODEL=gpt-4o-search-preview

# Option 2: External Search API (alternative)
GOOGLE_API_KEY=your-google-search-key-here
# BING_SEARCH_API_KEY=your-bing-search-key-here
# GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# Database Configuration
DATABASE_URL=sqlite:///data/echoes.db
# DATABASE_URL=postgresql://user:password@localhost/echoes
# DATABASE_URL=mysql://user:password@localhost/echoes

# Security Configuration
SECRET_KEY=your-secret-key-for-jwt-tokens-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENABLE_AUTH=true

# Monitoring & Logging
LOG_LEVEL=INFO
LOG_FILE=logs/echoes.log
ENABLE_METRICS=true
METRICS_PORT=8090

# ATLAS Configuration
ATLAS_DATA_PATH=data/atlas
ATLAS_STORAGE_TYPE=json

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
ENABLE_CACHE=true

# Development Settings
DEBUG=false
ENVIRONMENT=production

# Additional API Keys
OLLAMA_API_KEY=
SECONDARY_REPORT_DIR=
TEMP_DIR=
HUGGINGFACE_TOKEN=
DIARIZATION_AUTH_TOKEN=
GITHUB_TOKEN=
PAT_ECHOES=
PAT_IRFANKABIR02=

# Token & sampling defaults
WHISPER_MODEL=medium
