{
  "editor.inlineSuggest.enabled": true,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "chat.experimental.cascadeEdits": true,
  "chat.editor.cascadeCodeEdits": true,
  "chat.experimental.autoApplyEdits": true,
  "chat.inlineEdit.enabled": true,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.chat.enable": true,
  "chat.experimental.copilotInlineCompletions": true,
  "chat.experimental.functionCalling": true,
  "chat.experimental.externalToolIntegration": true,
  "chat.experimental.enableToolContext": true,
  "python.defaultInterpreterPath": "backend/.venv/bin/python",
  "python.formatting.provider": "black",
  "typescript.tsserver.experimental.enableProjectDiagnostics": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/node_modules": true,
    "**/dist": true,
    "**/.venv": true
  },
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1500,
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "security.workspace.trust.enabled": true
}
