# SECURE ENVIRONMENT VARIABLES
# Store actual values in secure key management system or Docker secrets

# AI Models
OPENAI_API_KEY=your-secure-openai-key-here

# External Data Sources
PUBMED_API_KEY=not-required-but-recommended
CLINICAL_TRIALS_API_KEY=not-required
BLS_API_KEY=your-bls-api-key-here
ONET_API_KEY=your-onet-api-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/ai_advisor
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=generate-secure-random-key-here-minimum-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30
DEBUG=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Safety Controls
PROVENANCE_ENFORCEMENT=strict
AGENT_DRY_RUN_DEFAULT=True
MAX_CONCURRENT_AGENTS=10
AGENT_TIMEOUT_SECONDS=300

# Monitoring & Logging
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
ENABLE_SCIENCE_MODULE=True
ENABLE_COMMERCE_MODULE=True
ENABLE_ARTS_MODULE=True
ENABLE_HIL_FEEDBACK=True
