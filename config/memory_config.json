{
  "file_handlers": {
    "text": {
      "enabled": true,
      "extensions": [".txt", ".md", ".json", ".html", ".css", ".js", ".py", ".java", ".c", ".cpp", ".h", ".hpp"],
      "max_size_mb": 10,
      "encoding": "utf-8"
    },
    "web": {
      "enabled": true,
      "extensions": [".html", ".htm", ".css", ".js"],
      "max_size_mb": 5,
      "include_metadata": true
    },
    "image": {
      "enabled": true,
      "extensions": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".tiff"],
      "max_size_mb": 20,
      "max_dimension": 4096,
      "generate_thumbnails": true,
      "thumbnail_size": 256
    },
    "archive": {
      "enabled": true,
      "extensions": [".zip", ".tar", ".gz", ".7z", ".rar"],
      "max_size_mb": 100,
      "extract": true,
      "extract_path": "extracted"
    }
  },
  "memory": {
    "max_items_per_type": 1000,
    "retention_days": 90,
    "backup_enabled": true,
    "backup_path": "memory/backups",
    "backup_interval_hours": 24
  },
  "processing": {
    "max_concurrent_files": 4,
    "chunk_size_kb": 1024,
    "timeout_seconds": 300
  },
  "indexing": {
    "enabled": true,
    "rebuild_interval_hours": 24,
    "include_metadata": true
  },
  "security": {
    "scan_for_malware": true,
    "max_nesting_level": 5,
    "blocked_extensions": [".exe", ".dll", ".bat", ".cmd", ".sh"]
  }
}
